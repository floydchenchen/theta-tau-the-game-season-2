<% include header %>

<header class="bg-primary text-white">
    <div class="container text-center">
        <h1>The Game of Theta Tau: Season 2</h1>
        <p class="lead">Problem 8</p>
    </div>
</header>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="\">The Game of Theta Tau: Season 2</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <% if (!currentUser) { %>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/login">Login</a></li>
                <% } else { %>
                <li class="nav-item"><a class="nav-link js-scroll-trigger">Signed in as <strong><%= currentUser.username %></strong></a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<section id="p1" class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto container">
                <h2>Problem 8</h2>
                <p class="lead">Please decrypt this message: <strong>es4g 3G2u Fbda 18yG</strong></p>
                <form action="/p9" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="answer" placeholder="">
                        <button type="submit" class="btn btn-primary mb-2 my-3">Submit Answer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
        <% if (error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <p><%= error %></p>
        </div>
        <% } %>
</section>

<% include footer %>
